<div id="page-cover" />

<style>
    #page-cover {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 4;
        background-image: radial-gradient(circle, var(--primary-color) 0%, #0000 0%);
        pointer-events: none;
    }
</style>

<script>
    document.addEventListener("astro:after-preparation", () => {
        gsap.fromTo("#page-cover", {
            background: "radial-gradient(circle, var(--primary-color) 0%, #0000 0%)"
        }, {
            duration: 1,
            background: "radial-gradient(circle, var(--primary-color) 100%, #0000 100%)",
        });
    });
    document.addEventListener("astro:after-swap", () => {
        gsap.fromTo("#page-cover", {
            background: "radial-gradient(circle, #0000 0%, var(--primary-color) 0%)"
        }, {
            duration: 1,
            delay: .5,
            background: "radial-gradient(circle, #0000 100%, var(--primary-color) 100%)",
        });
    })
</script>