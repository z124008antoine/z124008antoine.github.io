---
import { Image } from "astro:assets";

const { src, alt, big=false } = Astro.props;
---

<div class:list={["image-wrap", {big}]}>
    <Image {src} {alt} />
</div>

<style>
    .image-wrap {
        position: relative;
        width: 100%;
        height: 100%;
        max-width: 50vw;
        max-height: 50vh;
    }
    .image-wrap.big {
        grid-row: span 2;
        max-width: 70vw;
        max-height: 70vh;
    }
    img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
</style>