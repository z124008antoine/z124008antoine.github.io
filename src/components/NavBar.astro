---
import { t } from "i18next";
import { localizePath } from "astro-i18next";

// Pages to display in the navigation
const pages = [
    { path: localizePath("/"), title: t("home:meta.title") },
    { path: localizePath("/process"), title: t("common:nav.process") },
    { path: localizePath("/about"), title: t("common:nav.about") },
];

// Current page pathname
const pathname = Astro.site?.pathname;
---

<script is:inline>
    function navigate(e) {
        console.log(e);
        e.preventDefault();
    }
</script>

<nav class="navigation">
    <!-- Loop through the pages and create a link for each one -->
    {pages.map((page) => (
        <a
            href={page.path}
            onclick="navigate"
            class:list={[{"current-page": page.path === pathname}]}>
            {page.title}
        </a>
    ))}
</nav>

<style>
    :root {
        --nav-height: 63px;
        --full-nav-height: 94px;
    }

    .navigation {
        position: sticky;
        top: 0;
        display: grid;
        width: clamp(20rem, 40rem, 100%);
        margin: 1rem auto;
        grid-template-columns: repeat(3, 1fr);
        justify-items: center;
        align-items: center;
        column-gap: 1rem;
        overflow: hidden;
        z-index: 10;
        mix-blend-mode: difference;
    }

    .navigation a {
        text-decoration: none;
        color: var(--text-color-bright);
        font-size: 1.2rem;
        padding: 1em;
        text-align: center;
        transition: transform .2s ease-in-out;
        background-clip: text;
        backdrop-filter: invert(1);
    }

    .navigation a::after {
        content: "";
        display: block;
        width: 100%;
        transform: scaleX(0);
        height: var(--line-width);
        background-color: var(--text-color-bright);
        transition: transform .4s cubic-bezier(.7,0,0,1.5);
        margin-bottom: calc(var(--line-width) * -1);
    }

    .navigation a:hover::after {
        transform: scaleX(1);
    }

    .navigation a:active {
        transform: scale(.95) translateY(3px);
    }
</style>