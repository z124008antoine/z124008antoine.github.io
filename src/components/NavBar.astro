---
import { t } from "i18next";
import { localizePath } from "astro-i18next";

// Pages to display in the navigation
const pages = [
    { path: localizePath("/"), title: t("home:meta.title") },
    { path: localizePath("/process"), title: t("common:nav.process") },
    { path: localizePath("/about"), title: t("common:nav.about") },
];

// Current page pathname
const pathname = Astro.site?.pathname;
---

<script is:inline>
    function navigate(e) {
        console.log(e);
        e.preventDefault();
    }
</script>

<nav class="navigation">
    <!-- Loop through the pages and create a link for each one -->
    {pages.map((page) => (
        <a
            href={page.path}
            onclick="navigate"
            class:list={[{"current-page": page.path === pathname}]}>
            {page.title}
        </a>
    ))}
</nav>

<style>
    :root {
        --nav-height: 63px;
        --full-nav-height: 94px;
    }

    .navigation {
        position: sticky;
        top: 0;
        display: grid;
        width: clamp(20rem, 40rem, 100%);
        margin: 1rem auto;
        grid-template-columns: repeat(3, 1fr);
        justify-items: center;
        align-items: center;
        column-gap: 1rem;

        overflow: hidden;
        background-color: var(--primary-color);
        z-index: 10;
    }

    .navigation a {
        text-decoration: none;
        color: var(--text-color-bright);
        font-size: 1.2rem;
        padding: 1em;
        text-align: center;
        transition: .2s ease-in-out;
        transition: letter-spacing transform;
    }

    .navigation a:hover {
        text-decoration: underline;
        letter-spacing: .1em;
    }

    .navigation a:active {
        letter-spacing: 0;
        transform: translateY(2px);
    }
</style>